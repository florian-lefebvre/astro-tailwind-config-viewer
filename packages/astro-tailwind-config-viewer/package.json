{
	"name": "astro-tailwind-config-viewer",
	"version": "2.0.1",
	"description": "Explore your Tailwind config visually directly in your browser while developing.",
	"type": "module",
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"assets"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"prepublishOnly": "pnpm build"
	},
	"keywords": [
		"astro-integration",
		"astro-component",
		"withastro",
		"astro",
		"devtools"
	],
	"author": "florian-lefebvre",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/florian-lefebvre/astro-tailwind-config-viewer.git"
	},
	"bugs": "https://github.com/florian-lefebvre/astro-tailwind-config-viewer/issues",
	"homepage": "https://github.com/florian-lefebvre/astro-tailwind-config-viewer#readme",
	"license": "MIT",
	"peerDependencies": {
		"@astrojs/tailwind": "*",
		"astro": "^4.7.0",
		"tailwindcss": "^3.0.0"
	},
	"dependencies": {
		"astro-integration-kit": "^0.13.2",
		"serve-static": "^1.15.0",
		"tailwind-config-viewer": "^2.0.2",
		"ufo": "^1.5.3"
	},
	"devDependencies": {
		"@types/node": "^20.12.12",
		"@types/serve-static": "^1.15.7",
		"tsup": "^8.0.2",
		"vite": "^5.2.11"
	}
}
